= simple_form_for(@badge_set, :html => {:class => 'form-horizontal' }) do |f|
  = f.input :name
  = f.input :notes, :as => :text, :label => "Notes", :input_html => {:id => 'some-textarea', :class => 'span6' }
  
  .form-actions  
    = f.button :submit, :class => 'btn btn-primary'
    = link_to 'Cancel', badge_sets_path, :class => 'btn btn-primary'


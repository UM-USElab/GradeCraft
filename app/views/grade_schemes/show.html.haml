%p
  %b Assignment:
  = @grade_scheme.scheme_name
  
%h3
Scheme Elements:
(#{link_to 'Add Element', new_grade_scheme_element_path(:grade_scheme => @grade_scheme.id)})

%table#grade_schemes.display.table-bordered.table
  %thead
    %tr
      %th 
      %th Name
      %th Low Value
      %th High Value
      %th Letter Grade
      %th
      %th
  %tbody
    - @grade_scheme.grade_scheme_elements.each do |grade_scheme_element|
      %tr
        %td #{grade_scheme_element.name} 
        %td #{number_with_delimiter(grade_scheme_element.low_range, :delimiter => ',') }
        %td #{number_with_delimiter(grade_scheme_element.high_range, :delimiter => ',') }
        %td #{grade_scheme_element.letter_grade} 
        %td= link_to "View", grade_scheme_element
        %td= link_to "Edit", edit_grade_scheme_element_path
        %td= link_to "Delete", grade_scheme_element, :confirm => 'Are you sure?', :method => :delete
  

%div#footerNav
  = link_to 'Edit', edit_grade_scheme_path(@grade_scheme), :class => 'btn btn-primary'
  = link_to 'Back', grade_schemes_path, :class => 'btn btn-primary'

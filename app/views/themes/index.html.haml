%table#themes.table.table-bordered
  %tr
    %th Name
    %th Filename
    %th
    %th
    %th

  - @themes.each do |theme|
    %tr
      %td= theme.name
      %td= theme.filename
      %td= link_to 'View', theme, {:class => 'btn btn-mini'}
      %td= link_to 'Edit', edit_theme_path(theme), {:class => 'btn btn-mini'}
      %td= link_to 'Delete', theme, {:class => 'btn btn-mini'}, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Theme', new_theme_path, :class => 'btn btn-primary'

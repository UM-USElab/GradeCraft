= simple_form_for(@grade, :html => {:class => 'form-horizontal' }) do |f|
  = f.input :user, :collection => User.students, :include_blank => false
  - if @assignment
    = f.input :assignment_id, :as => :hidden
  - else
    = f.input :assignment
  = render "#{@grade.class.name.underscore}_form", :form => f
    
  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    = link_to 'Cancel', grades_path, :class => 'btn btn-primary'
= simple_form_for([@assignment, @grade], :html => {:class => 'form-horizontal' }) do |f|
  = f.association :assignment, :collection => @assignments
  - if @assignment.is_individual?
    = f.input :gradeable_id, :collection => @students, :label => "#{current_course.user_ref}" 
    = f.input :gradeable_type, :as => :hidden, :input_html => { :value => 'User' }
  - if @assignment.has_groups?
    = f.input :gradeable_id, :collection => @groups, :label => "Group"
    = f.input :gradeable_type, :as => :hidden, :input_html => { :value => 'Group' }
  - if @assignment.has_teams?
    = f.input :gradeable_id, :collection => @teams, :label => "#{current_course.team_ref}"
    = f.input :gradeable_type, :as => :hidden, :input_html => { :value => 'Team' }
  //- if @assignment.has_levels?
  //= f.input :raw_score, :collection => @grade_scheme_elements, :as => :select, :input_html => { :value => @grade_scheme_element.value }
  - if @assignment.binary?
    = f.input :raw_score, :input_html => { :value => @assignment.point_total }, :label => "Score"
  //= f.input :final_score
  = f.input :feedback, :as => :text, :input_html => {:id => 'some-textarea', :class => 'span9' }
  = f.input :status, :as => :radio_buttons, :collection => [["New"], ["Graded"],["Released"]]
  //TODO Fix earned badge submission
  = f.fields_for :earned_badge, do |earned_badge|
    = earned_badge.input :badge_id, :as => :check_boxes, :collection => @badges
    = earned_badge.input :earnable_type, :input_html => { :value => "User" }, :as => :hidden
  

  .form-actions
    = f.button :submit, :class => 'btn'
    = link_to 'Cancel', assignment_path(@assignment), :class => 'btn'
